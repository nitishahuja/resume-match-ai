{
  "manifest_version": 3,
  "name": "Resume Matcher",
  "version": "1.3",
  "description": "AI-powered resume matcher extension for job applications.",
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://www.linkedin.com/*",
    "https://www.indeed.com/*",
    "https://www.glassdoor.com/*",
    "https://www.monster.com/*",
    "https://www.ziprecruiter.com/*",
    "https://www.workday.com/*",
    "https://www.greenhouse.io/*",
    "https://jobs.lever.co/*",
    "https://www.smartrecruiters.com/*",
    "https://www.jobvite.com/*",
    "https://www.taleo.net/*",
    "https://boards.greenhouse.io/*",
    "https://www.recruitee.com/*",
    "https://www.jobsoid.com/*",
    "https://www.jazzhr.com/*",
    "https://www.clearcompany.com/*",
    "https://www.icims.com/*",
    "https://recruit.hirebridge.com/*",
    "https://www.adp.com/*",
    "https://www.peoplefluent.com/*",
    "https://www.jobscore.com/*",
    "https://www.recruitcrm.io/*",
    "https://www.fountain.com/*",
    "https://www.applicantstack.com/*",
    "https://www.trakstar.com/*",
    "https://www.recruiting.com/*",
    "https://jobs.careerbuilder.com/*",
    "https://www.usajobs.gov/*",
    "https://careers.google.com/*",
    "https://careers.microsoft.com/*",
    "https://www.ibm.com/employment/*",
    "https://www.amazon.jobs/*",
    "https://jobs.apple.com/*",
    "https://www.dice.com/*",
    "https://www.hired.com/*",
    "https://www.flexjobs.com/*",
    "https://www.angel.co/*",
    "https://www.weworkremotely.com/*",
    "https://www.remotive.io/*",
    "https://www.upwork.com/*",
    "https://www.fiverr.com/*",
    "https://www.freelancer.com/*",
    "https://www.toptal.com/*",
    "https://www.peopleperhour.com/*",
    "https://www.ycombinator.com/companies/safetykit/jobs/*",
    "https://wellfound.com/jobs*",
    "https://northeastern.joinhandshake.com/stu/postings/*",
    "https://jpmc.fa.oraclecloud.com/hcmUI/CandidateExperience/en/sites/CX_1001/requisitions/*",
    "https://jobright.ai/jobs/info/*",
    "https://www.google.com/about/careers/applications/jobs/results/*",
    "https://simplify.jobs/p/*",
    "https://www.levels.fyi/jobs/title/software-engineer/location/united-states/level/entry*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*jobs*",
        "*://*.indeed.com/*viewjob*",
        "*://*.glassdoor.com/*",
        "*://*.monster.com/*jobs*",
        "*://*.ziprecruiter.com/*jobs*",
        "*://*.workday.com/*job*",
        "*://*.greenhouse.io/*",
        "*://jobs.lever.co/*",
        "*://*.smartrecruiters.com/*",
        "*://*.jobvite.com/*",
        "*://*.taleo.net/*",
        "*://boards.greenhouse.io/*",
        "*://*.recruitee.com/*",
        "*://*.jobsoid.com/*",
        "*://*.jazzhr.com/*",
        "*://*.clearcompany.com/*",
        "*://*.icims.com/*",
        "*://recruit.hirebridge.com/*",
        "*://*.adp.com/*",
        "*://*.peoplefluent.com/*",
        "*://*.jobscore.com/*",
        "*://*.recruitcrm.io/*",
        "*://*.fountain.com/*",
        "*://*.applicantstack.com/*",
        "*://*.trakstar.com/*",
        "*://*.recruiting.com/*",
        "*://jobs.careerbuilder.com/*",
        "*://*.usajobs.gov/*",
        "*://careers.google.com/*",
        "*://careers.microsoft.com/*",
        "*://*.ibm.com/employment/*",
        "*://*.amazon.jobs/*",
        "*://jobs.apple.com/*",
        "*://*.dice.com/*",
        "*://*.hired.com/*",
        "*://*.flexjobs.com/*",
        "*://*.angel.co/*",
        "*://*.weworkremotely.com/*",
        "*://*.remotive.io/*",
        "*://*.upwork.com/*",
        "*://*.fiverr.com/*",
        "*://*.freelancer.com/*",
        "*://*.toptal.com/*",
        "*://*.peopleperhour.com/*",
        "*://www.ycombinator.com/companies/safetykit/jobs/*",
        "*://wellfound.com/jobs*",
        "*://northeastern.joinhandshake.com/stu/postings/*",
        "*://jpmc.fa.oraclecloud.com/hcmUI/CandidateExperience/en/sites/CX_1001/requisitions/*",
        "*://jobright.ai/jobs/info/*",
        "*://www.google.com/about/careers/applications/jobs/results/*",
        "*://simplify.jobs/p/*",
        "*://www.levels.fyi/jobs/title/software-engineer/location/united-states/level/entry*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/pdf.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
