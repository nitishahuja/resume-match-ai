{
  "manifest_version": 3,
  "name": "Resume Matcher",
  "version": "2.0",
  "description": "AI-powered resume matcher extension for job applications.",
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://careers.google.com/*",
    "https://jobs.google.com/*",
    "https://www.linkedin.com/*",
    "https://www.indeed.com/*",
    "https://www.glassdoor.com/*",
    "https://www.monster.com/*",
    "https://www.ziprecruiter.com/*",
    "https://www.workday.com/*",
    "https://www.greenhouse.io/*",
    "https://jobs.lever.co/*",
    "https://www.smartrecruiters.com/*",
    "https://www.jobvite.com/*",
    "https://www.taleo.net/*",
    "https://boards.greenhouse.io/*",
    "https://www.recruitee.com/*",
    "https://www.jobsoid.com/*",
    "https://www.jazzhr.com/*",
    "https://www.clearcompany.com/*",
    "https://www.icims.com/*",
    "https://recruit.hirebridge.com/*",
    "https://www.adp.com/*",
    "https://www.peoplefluent.com/*",
    "https://www.jobscore.com/*",
    "https://www.recruitcrm.io/*",
    "https://www.fountain.com/*",
    "https://www.applicantstack.com/*",
    "https://www.trakstar.com/*",
    "https://www.recruiting.com/*",
    "https://jobs.careerbuilder.com/*",
    "https://www.usajobs.gov/*",
    "https://careers.microsoft.com/*",
    "https://www.ibm.com/employment/*",
    "https://www.amazon.jobs/*",
    "https://jobs.apple.com/*",
    "https://www.dice.com/*",
    "https://www.hired.com/*",
    "https://www.flexjobs.com/*",
    "https://www.angel.co/*",
    "https://www.weworkremotely.com/*",
    "https://www.remotive.io/*",
    "https://www.upwork.com/*",
    "https://www.fiverr.com/*",
    "https://www.freelancer.com/*",
    "https://www.toptal.com/*",
    "https://www.peopleperhour.com/*",
    "https://hiring.cafe/*",
    "https://leethub.io/jobs/*",
    "https://www.coinbase.com/careers/positions*",
    "https://jobs.sap.com/job/*",
    "https://wellfound.com/jobs*",
    "https://simplify.jobs/p/*",
    "https://www.levels.fyi/jobs/*",
    "https://jobright.ai/jobs/info/*",
    "https://jpmc.fa.oraclecloud.com/hcmUI/CandidateExperience/en/sites/CX_1001/requisitions/*",
    "https://*.joinhandshake.com/stu/postings/*",
    "https://www.wayup.com/*",
    "https://www.roberthalf.com/*",
    "https://www.ladders.com/*",
    "https://www.theladders.com/*",
    "https://www.jobspresso.co/*",
    "https://www.devex.com/jobs/*",
    "https://www.idealist.org/*",
    "https://www.zipjobs.com/*",
    "https://www.builtin.com/*",
    "https://www.startup.jobs/*",
    "https://www.outsourcely.com/*",
    "https://www.lawjobs.com/*",
    "https://www.jobsforher.com/*",
    "https://www.flexjob.com/*",
    "https://www.powertofly.com/*",
    "https://www.vanhack.com/*",
    "https://www.automattic.com/work-with-us/*",
    "https://www.breezy.hr/*",
    "https://www.techcareers.com/*",
    "https://www.workatastartup.com/jobs/*",
    "https://*.symplicity.com/students/app/jobs/detail/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*jobs*",
        "*://*.indeed.com/*viewjob*",
        "*://*.glassdoor.com/*",
        "*://*.monster.com/*jobs*",
        "*://*.ziprecruiter.com/*jobs*",
        "*://*.workday.com/*job*",
        "*://*.greenhouse.io/*",
        "*://jobs.lever.co/*",
        "*://*.smartrecruiters.com/*",
        "*://*.jobvite.com/*",
        "*://*.taleo.net/*",
        "*://boards.greenhouse.io/*",
        "*://*.recruitee.com/*",
        "*://*.jobsoid.com/*",
        "*://*.jazzhr.com/*",
        "*://*.clearcompany.com/*",
        "*://*.icims.com/*",
        "*://recruit.hirebridge.com/*",
        "*://*.adp.com/*",
        "*://*.peoplefluent.com/*",
        "*://*.jobscore.com/*",
        "*://*.recruitcrm.io/*",
        "*://*.fountain.com/*",
        "*://*.applicantstack.com/*",
        "*://*.trakstar.com/*",
        "*://*.recruiting.com/*",
        "*://jobs.careerbuilder.com/*",
        "*://*.usajobs.gov/*",
        "*://careers.google.com/*",
        "*://jobs.google.com/*",
        "https://www.workatastartup.com/jobs/*",
        "*://careers.microsoft.com/*",
        "*://*.amazon.jobs/*",
        "*://jobs.apple.com/*",
        "*://*.dice.com/*",
        "*://*.hired.com/*",
        "*://*.weworkremotely.com/*",
        "*://hiring.cafe/*",
        "*://leethub.io/jobs/*",
        "*://www.coinbase.com/careers/positions*",
        "*://jobs.sap.com/job/*",
        "https://*.symplicity.com/students/app/jobs/detail/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/pdf.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
